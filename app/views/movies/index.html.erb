<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<div class="heading">Rotten Potatoes</div>

<table class="movies-list">
  <thead>
    <tr>
      <th>
        Title
        <div class="sort-links">
          <%= sort_button "title", "asc", "asc" %> |
          <%= sort_button "title", "desc", "desc" %>
        </div>
      </th>
      <th>
        Rating
        <div class="sort-links">
          <%= sort_button "rating", "asc", "asc" %> |
          <%= sort_button "rating", "desc", "desc" %>
        </div>
      </th>
      <th>
        Release Date
        <div class="sort-links">
          <%= sort_button "release_date", "asc", "asc" %> |
          <%= sort_button "release_date", "desc", "desc" %>
        </div>
      </th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <%= render movie %>
    <% end %>
  </tbody>
</table>

<%= link_to "Add a New Movie", new_movie_path, class: "floating-button", id: "add-button" %>
